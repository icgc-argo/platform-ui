{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2015",
    "outDir": "./uikit/dist",
    "sourceMap": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "declaration": true,
    "allowJs": false,
    "isolatedModules": false
  },
  "include": ["./uikit/**/*"],
  "exclude": [
    "node_modules",
    "**/testSetup.*",
    "**/*.test.*",
    "**/testUtil.*",
    "**/plopfile.js",
    "**/*.stories.*",
    "**/stories.*"
  ]
}
