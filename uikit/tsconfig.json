{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "es6",
    "outDir": "./dist",
    "sourceMap": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "declaration": true,
    "allowJs": false,
    "isolatedModules": false,
    "resolveJsonModule": false
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "**/testSetup.*",
    "**/*.test.*",
    "**/testUtil.*",
    "**/plopfile.js",
    "**/*.stories.*",
    "**/stories.*"
  ]
}
